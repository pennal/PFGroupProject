<div id="{{ resultsNumber }}" class="weatherBox">
    <div class="basicInfo">
        <p class="dayName">{{ dayName }} {{ dayNumber }}</p>
        <div class="forecast">
            {{ forecastCode }}
        </div>
        <div class="degree">
            {{ mainTemp }}° C
        </div>
    </div>
    <div class="expandedInfo hidden">
        <table>

            <tr>
                <td class="grey">Apparent Min</td>
                <td>{{ apparentTemperatureMin }}° C</td>
                <td class="grey">Min</td>
                <td>{{ minTemp }}° C</td>
            </tr>
            <tr>
                <td class="grey">Apparent Max</td>
                <td>{{ apparentTemperatureMax }}° C</td>
                <td class="grey">Max</td>
                <td>{{ maxTemp }}° C</td>
            </tr>
            <tr>
                <td class="grey">Rain Intensity</td>
                <td>{{ precipitationIntensity }} mm/h</td>
                <td class="grey">Rain Prob.</td>
                <td>{{ precipitationProbability }} %</td>
            </tr>
            <tr>
                <td class="grey">Humidity</td>
                <td>{{ humidity }} %</td>
                <td class="grey">Pressure</td>
                <td>{{ pressure }} hPa</td>
            </tr>
            <tr>
                <td class="grey">Wind Speed</td>
                <td>{{ windSpeed }} m/s</td>
            </tr>
            
        </table>
    </div>
</div>

